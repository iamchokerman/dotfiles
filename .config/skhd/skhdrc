# cmd - e : open -a /System/Volumes/Data/usr/local/Cellar/emacs-plus@28/28.1/Emacs.app
shift + alt - c : screencapture -c -i
shift + ctrl - c : screencapture -c
hyper - n : neovide
hyper - g : chokegenerator
